<%= form_for :user, url: '/user', method: :post do |f| %>
    <%= content_tag(:h1, "Register new user below") %>
    <%= f.text_field :first_name, id: "first_name", placeholder: "Enter first Name" %><br/><br/>
    <%= f.text_field :last_name, placeholder: "Enter last name" %><br/><br/>
    <%= f.text_field :username, placeholder: "Create a username" %><br/><br/>
    <%= f.text_field :password, type: "password", placeholder: "Create a password" %><br/><br/>
    <%= f.text_field :password_confirmation, type: "password", placeholder: "Confirm password" %><br/><br/>
    <%= f.text_field :email, placeholder: "example@gmail.com" %><br/><br/>
    <%= f.submit "Register"%>
<% end %>