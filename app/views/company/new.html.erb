<%= form_for @company, url: company_index_path do |f| %>
    <% if @company.errors.any? %>
        <ul>
        <% @company.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
        </ul>
    <% end %>

    <%= f.label "Your business or Individual name" %><br/><%= f.text_field :name, placeholder: "Enter Business Name" %><br/><br/>
    <%= f.text_field :industry, placeholder: "Business Industry"  %><br/><br/>
    <%= f.text_field :size, placeholder: "How many Employees?" %><br/><br/>

    <%= f.fields_for :users do |form| %>
        <%= content_tag(:h1, "Register new user below") %>
        <%= form.text_field :first_name, id: "first_name", placeholder: "Enter first Name" %><br/><br/>
        <%= form.text_field :last_name, placeholder: "Enter last name" %><br/><br/>
        <%= form.text_field :username, placeholder: "Create a username" %><br/><br/>
        <%= form.text_field :password, type: "password", placeholder: "Create a password" %><br/><br/>
        <%= form.text_field :password_confirmation, type: "password", placeholder: "Confirm password" %><br/><br/>
        <%= form.text_field :email, placeholder: "example@gmail.com" %><br/><br/>
        
    <% end %>
    <%= f.submit "Create Company" %><br/>
<% end %>